@using prueba_integra.ViewModel
@model Employee

<form asp-action="DeletePost" enctype="multipart/form-data">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4"> 

        <div class=row>
            <div class="col-6 mb-3">
                <label asp-for="Name">Nombre</label>
                <input asp-for="Name" class="form-control" disabled/>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Lastname">Apellido</label>
                <input asp-for="Lastname" class="form-control" disabled/>
            </div>
        </div>

        <div class=row>
            <div class="col-6 mb-3">
                <label asp-for="PhoneNumber">Numero de Telefono</label>
                <input asp-for="PhoneNumber" asp-format="{0:(###) ###-####}" class="form-control" disabled/>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Mail">Correo Electronico</label>
                <input asp-for="Mail" class="form-control" disabled/>

            </div>
        </div>

        <div class=row>
            <div class="col-6 mb-3">
                <label asp-for="ContractDate">Fecha de contratacion @Model.ContractDate</label>
                <input asp-for="@Model.ContractDate" value="@Model.ContractDate" asp-format="{0:MM/dd/yyyy}" class="form-control" disabled/>

            </div>
        </div>
            
        <button
            type="submit"
            class="btn btn-outline-danger"
            style="width: 150px;"
        >
            <i class="bi bi-pen-trash"></i> Delete
        </button>

        <a asp-controller="Employee" asp-action="List">
            <i class="bi bi-arrow-return-left text-info"></i>
            <span class="text-info"> Volver a lista</span>
        </a>
    </div>

</form>
